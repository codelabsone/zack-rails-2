<%= form_for(@car) do |f| %>
  <p>
    <%= f.make :make %><br/>
    <%= f.text_field :make, autofocus: true %>
  </p>
  <p>
    <%= f.label :description %><br/>
    <%= f.text_area :description, cols: 40, rows: 7 %>
  </p>
  <p>
    <%= f.label :model %><br/>
    <%= f.text_field :model, size: 5 %>
  </p>
  <p>
    <%= f.label :year %><br/>
    <%= f.number_field :year %>
  </p>
  <p>
    <%= f.label :mileage %><br/>
    <%= f.number_field :mileage %>
  </p>
  <p>
    <%= f.label :price %><br/>
    <%= f.number_field :price %>
  </p>
  <p>
  <%= f.label :color %><br/>
  <%= f.text_field :color %>
</p>
<p>
  <%= f.label :vehicle_type %><br/>
  <%= f.text_field :vehicle_type %>
</p>

<p>
  <%= f.label :image_file_name %><br/>
  <%= f.text_field :image_file_name %>
</p>
  <p>
    <%= f.submit %>
    <%= link_to "Cancel", cars_path %>
  </p>
<% end %>
